<script>
/* ===== Small helpers ===== */
const $ = (s, r=document) => r.querySelector(s);
const $$ = (s, r=document) => r.querySelectorAll(s);

/* ===== Mobile nav toggle (ARIA + reduced reflow) ===== */
const burger = $('#burger'); const menu = $('#menu');
burger.addEventListener('click', () => {
  const shown = menu.classList.toggle('show');
  burger.setAttribute('aria-expanded', shown ? 'true' : 'false');
}, { passive:true });

/* ===== Hash Router (cross-browser friendly) ===== */
const routes = ['home','about','skills','education','projects','todo','products','contact'];
function show(route){
  // hide all sections
  $$('#main > section').forEach(s => (s.style.display='none'));
  // set active nav link
  $$('[data-route]').forEach(a=>a.classList.remove('active'));
  const section = document.getElementById(route) || document.getElementById('home');
  section.style.display='block';
  const link = document.querySelector(`[data-route][href="#${route}"]`);
  if(link) link.classList.add('active');
  // close mobile menu
  menu.classList.remove('show'); burger.setAttribute('aria-expanded','false');
  // scroll to top (fallback to documentElement for older browsers)
  (document.scrollingElement || document.documentElement).scrollTo({top:0,behavior:'instant'});
}
function handleHash(){
  const r = location.hash.replace('#','');
  show(routes.includes(r)? r : 'home');
}
window.addEventListener('hashchange', handleHash, { passive:true });
handleHash();

/* ===== Footer year ===== */
$('#year').textContent = new Date().getFullYear();

/* ===== To-Do App (LocalStorage) ‚Äî optimized rendering ===== */
const TODO_KEY = 'csg_todos_v1';
const $todoInput = $('#todo-input');
const $todoForm  = $('#todo-form');
const $todoClear = $('#todo-clear');
const $todoList  = $('#todo-list');

function readTodos(){ try{ return JSON.parse(localStorage.getItem(TODO_KEY)||'[]'); }catch{ return []; } }
function writeTodos(t){ localStorage.setItem(TODO_KEY, JSON.stringify(t)); }

function renderTodos(){
  const todos = readTodos();
  $todoList.innerHTML='';
  if(!todos.length){
    const empty=document.createElement('div'); empty.className='muted';
    empty.textContent='No tasks yet ‚Äî add your first task above.'; $todoList.appendChild(empty); return;
  }
  const frag = document.createDocumentFragment();
  todos.forEach((t,i)=>{
    const row=document.createElement('div'); row.className='todo-item';
    const left=document.createElement('div'); left.style.display='flex'; left.style.gap='10px'; left.style.alignItems='center';
    const cb=document.createElement('input'); cb.type='checkbox'; cb.checked=!!t.done; cb.setAttribute('aria-label','Mark done');
    cb.addEventListener('change',()=>{ const x=readTodos(); x[i].done=cb.checked; writeTodos(x); renderTodos(); }, { passive:true });
    const label=document.createElement('span'); label.textContent=t.text; if(t.done) label.style.textDecoration='line-through';
    left.appendChild(cb); left.appendChild(label);

    const actions=document.createElement('div'); actions.className='todo-actions';
    const del=document.createElement('button'); del.className='btn alt'; del.type='button'; del.textContent='Delete';
    del.addEventListener('click',()=>{ const x=readTodos(); x.splice(i,1); writeTodos(x); renderTodos(); });
    actions.appendChild(del);

    row.appendChild(left); row.appendChild(actions); frag.appendChild(row);
  });
  $todoList.appendChild(frag);
}

$todoForm.addEventListener('submit',(e)=>{
  e.preventDefault();
  const v=$todoInput.value.trim(); if(!v) return;
  const x=readTodos(); x.push({text:v,done:false}); writeTodos(x); $todoInput.value=''; renderTodos();
});
$todoClear.addEventListener('click',()=>{ const x=readTodos().filter(t=>!t.done); writeTodos(x); renderTodos(); });
renderTodos();

/* ===== Products (Filter + Sort + Search) ‚Äî batched + debounced ===== */
const PRODUCTS = Object.freeze([
  {name:'Laptop Air 14', category:'electronics', price:620, rating:4.6},
  {name:'Noise-Cancel Headphones', category:'electronics', price:120, rating:4.4},
  {name:'Cotton T-Shirt', category:'clothing', price:18, rating:4.1},
  {name:'Denim Jeans', category:'clothing', price:42, rating:4.3},
  {name:'JavaScript Essentials', category:'books', price:25, rating:4.7},
  {name:'Data Science Handbook', category:'books', price:32, rating:4.8},
  {name:'Smart Watch', category:'electronics', price:99, rating:4.2},
  {name:'Hoodie Classic', category:'clothing', price:35, rating:4.0}
]);
const $cat = $('#cat'), $sort = $('#sort'), $search = $('#search'), $grid = $('#products-grid');

function renderProducts(list){
  $grid.innerHTML='';
  if(!list.length){ $grid.innerHTML='<div class="muted">No products match.</div>'; return; }
  const frag = document.createDocumentFragment();
  list.forEach(p=>{
    const card=document.createElement('div'); card.className='product';
    card.innerHTML = `
      <div class="pill" style="margin-bottom:6px;text-transform:capitalize">${p.category}</div>
      <h4>${p.name}</h4>
      <p class="muted" aria-label="Price">Price: $${p.price.toFixed(2)}</p>
      <p class="muted" aria-label="Rating">Rating: ${p.rating.toFixed(1)} ‚òÖ</p>
    `;
    frag.appendChild(card);
  });
  $grid.appendChild(frag);
}

function filterAndSort(){
  const cat=$cat.value, q=$search.value.trim().toLowerCase();
  let list=PRODUCTS;
  if(cat!=='all') list=list.filter(p=>p.category===cat);
  if(q) list=list.filter(p=>p.name.toLowerCase().includes(q));
  switch($sort.value){
    case 'price-asc': list=[...list].sort((a,b)=>a.price-b.price); break;
    case 'price-desc': list=[...list].sort((a,b)=>b.price-a.price); break;
    case 'rating-desc': list=[...list].sort((a,b)=>b.rating-a.rating); break;
    default: list=[...list];
  }
  renderProducts(list);
}

function debounce(fn, ms=150){ let t; return (...args)=>{ clearTimeout(t); t=setTimeout(()=>fn.apply(this,args), ms); }; }
const filterAndSortDebounced = debounce(filterAndSort, 120);
[$cat,$sort].forEach(el=>el.addEventListener('input', filterAndSort, { passive:true }));
$search.addEventListener('input', filterAndSortDebounced);
renderProducts(PRODUCTS);

/* ===== Misc: Progressive enhancement ===== */
// Mark external links semantically
$$('a[target="_blank"]').forEach(a=>a.setAttribute('rel','noopener noreferrer'));
</script>
</body>
</html>
